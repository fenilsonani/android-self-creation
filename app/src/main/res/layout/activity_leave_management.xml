<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Management (Admin)"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:id="@+id/textViewLeaveManagementTitle" />

    <ListView
        android:id="@+id/listViewLeaveRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewLeaveManagementTitle"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonApproveLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewLeaveRequests"
        android:layout_marginTop="24dp"
        android:text="Approve Leave"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/buttonRejectLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewLeaveRequests"
        android:layout_marginTop="24dp"
        android:text="Reject Leave"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
